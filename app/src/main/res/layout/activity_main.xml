<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:alpha="0.99"
    tools:context=".MainActivity">

    <!-- Header with Gradient Background and Modern Styling -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:rippleColor="@color/white"
        app:cardForegroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gradient Background -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background"
            android:padding="20dp">

            <!-- Title Text -->
            <TextView
                android:id="@+id/title"
                android:layout_width="252dp"
                android:layout_height="93dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-condensed"
                android:letterSpacing="0.2"
                android:shadowColor="#66000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="4"
                android:text="හෙළ News Dashboard"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subtitle Text -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Stay updated with the latest news"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:padding="8dp"
                android:src="@drawable/ic_menu"
                android:visibility="visible"
                tools:layout_editor_absoluteX="-12dp"
                tools:layout_editor_absoluteY="-5dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Menu Icon -->

    <!-- Buttons -->


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_report"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="280dp"
        android:layout_height="69dp"
        android:layout_marginTop="88dp"
        android:text="Add New REPORTS"
        android:textColor="@color/buttonColor"
        app:backgroundTint="@color/white"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:strokeColor="@color/primaryColor"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pending_reports"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="280dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:text="Pending REPORTS"
        android:textColor="@color/buttonColor"
        app:backgroundTint="@color/white"
        app:cornerRadius="30dp"

        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_report"
        app:strokeColor="@color/primaryColor"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_approved_reports"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="280dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:text="Approved REPORTS"
        android:textColor="@color/buttonColor"
        app:backgroundTint="@color/white"
        app:cornerRadius="30dp"

        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pending_reports"
        app:strokeColor="@color/primaryColor"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_reports"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="280dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        android:text="View REPORTS"
        android:textColor="@color/buttonColor"
        app:backgroundTint="@color/white"
        app:cornerRadius="30dp"

        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_approved_reports"
        app:strokeColor="@color/primaryColor"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
